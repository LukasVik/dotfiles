[fetch]
	prune = true

[push]
    # Push only current branch, create remote branch if it does not exist.
    default=current

[diff]
    tool = difftool_code
[difftool "difftool_code"]
    prompt = false
    cmd = ~/work/repo/dotfiles/difftool_code.sh "$LOCAL" "$REMOTE"

[merge]
    tool = mergetool_code
[mergetool "mergetool_code"]
    prompt = false
    cmd = ~/work/repo/dotfiles/mergetool_code.sh "$BASE" "$LOCAL" "$REMOTE" "$MERGED"

[color]
	ui = auto

[color "diff"]
	meta = yellow bold
